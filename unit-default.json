{
  "listeners": {
    "*:8080": {
      "pass": "routes"
    }
  },

  "routes": [
    {
      "match": {
        "uri": [
          "*.php",
          "*.php/*"
        ]
      },

      "action": {
        "pass": "applications/phpapp"
      }
    },
    {
      "action": {
        "share": "/usr/src/app/public$uri",
        "fallback": {
          "pass": "applications/phpapp"
        }
      }
    }
  ],

  "applications": {
    "phpapp": {
      "type": "php",
      "root": "/usr/src/app/public/",
      "script": "index.php"
    }
  },

  "access_log": "/dev/stdout"
}